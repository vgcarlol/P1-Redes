{
  "schema_version": "v1",
  "name": "tasks_mcp_server",
  "description": "Task manager with priorities and due dates. Detects time conflicts and supports snooze.",
  "contact_email": "val221164@uvg.edu.gt",
  "authentication": "none",
  "tools": [
    {
      "name": "create_task",
      "description": "Create a new task with title, due date (YYYY-MM-DD HH:MM), and priority (1=High,2=Med,3=Low).",
      "input_schema": {
        "type": "object",
        "properties": {
          "title": {"type": "string"},
          "due": {"type": "string", "description": "YYYY-MM-DD HH:MM"},
          "priority": {"type": "integer", "enum": [1,2,3]}
        },
        "required": ["title","due","priority"]
      }
    },
    {
      "name": "list_tasks",
      "description": "List tasks filtered by optional status (pending|done) and/or by date range.",
      "input_schema": {
        "type": "object",
        "properties": {
          "status": {"type":"string","enum":["pending","done"]},
          "from": {"type":"string","description":"YYYY-MM-DD"},
          "to": {"type":"string","description":"YYYY-MM-DD"}
        }
      }
    },
    {
      "name": "complete_task",
      "description": "Mark a task as done by id.",
      "input_schema": {
        "type": "object",
        "properties": { "id": {"type":"integer"} },
        "required": ["id"]
      }
    },
    {
      "name": "snooze_task",
      "description": "Snooze a task by minutes.",
      "input_schema": {
        "type": "object",
        "properties": {
          "id": {"type":"integer"},
          "minutes": {"type":"integer","minimum":1}
        },
        "required": ["id","minutes"]
      }
    }
  ]
}
